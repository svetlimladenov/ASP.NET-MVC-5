@using Torshia.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<main class="mt-3">
    <h1 class="text-center text-torshia">Register</h1>
    <hr class="bg-torshia w-50 hr-2" />
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "mx-auto w-50", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(x => x.Username, new { @class = "text-torshia" })
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "Username..." })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Password, new { @class = "text-torshia" })
            @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password...", id = "confirmPassword" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div class="button-holder mt-4 d-flex justify-content-center">
            <button type="submit" class="btn bg-torshia text-white">Login</button>
        </div>

    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}