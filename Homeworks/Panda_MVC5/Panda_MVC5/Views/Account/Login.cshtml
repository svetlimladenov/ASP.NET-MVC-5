@using Panda_MVC5.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<main class="mt-3">
    <h1 class="text-center text-torshia">Login</h1>
    <hr class="bg-panda w-50 hr-2"/>
    @using (Html.BeginForm("Login","Account", FormMethod.Post, new { @class = "mx-auto w-50"}))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(x => x.Username, new {@class = "text-torshia"})
            @Html.TextBoxFor(x => x.Username, new {@class = "form-control", placeholder = "Username..."})
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Password, new { @class = "text-torshia" })
            @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password..." })
        </div>
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn bg-panda text-white">Login</button>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}