@model Panda_MVC5.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<main class="mt-3">
    <h1 class="text-center text-torshia">Register</h1>
    <hr class="bg-panda w-50 hr-2"/>
    @using (Html.BeginForm("Register","Account", FormMethod.Post, new {@class = "mx-auto w-50"}))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(x => x.Username, new { @class = "text-torshia"})
            @Html.TextBoxFor(x => x.Username, new {@class = "form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Password, new { @class = "text-torshia" })
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.ConfirmPassword, new { @class = "text-torshia" })
            @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Email, new { @class = "text-torshia"})
            @Html.TextBoxFor(x => x.Email, new {@class = "form-control"})
        </div>
        <div class="button-holder mt-4 d-flex justify-content-center">
            <button type="submit" class="btn bg-panda text-white">Register</button>
        </div>
    }   
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
